// Waybar Configuration

{
    "spacing": 5,
    "layer": "top",
    "width": -10,

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/submap", 
        "hyprland/window"
    ],
    "modules-center": ["clock"],
    "modules-right": [
        "tray", 
        "idle_inhibitor",
        "temperature",
        "memory",
        "network",
        "backlight",
        "pulseaudio",
        "battery"
    ],

    // ----------------------------------------- //
    // ------- // Modules Configuration //------ //
    // ----------------------------------------- //
    
    "hyprland/workspaces": {
        "format": "{icon} {windows} ",
        "format-window-separator": "  ",
        "window-rewrite-default": "󱃼",
        "window-rewrite": {
            "1Password": "",
            "Alacritty": "",
            "Vivaldi": "󰇧",
            "Code": "󰨞",
            "discord": "󰙯",
            "pavucontrol": "",
            "Brave": "",
            "Noisetorch": "",
            "Obsidian": ""
        },
    },

    "hyprland/submap": {
        "format": " 󰡱 : <span style=\"italic\">{}</span> ",
        "max-length": 50
    },

    "hyprland/window": {
        "format": "{}",
        "min-length": 30,
        "max-length": 30,
        "rewrite": {
            "(.*) - Vivaldi":"󰇧 $1",
            "(.*) - Visual Studio Code": "󰨞 $1",
            "(.*) - Discord":"󰙯 $1",
            "(.*) - 1Password":" $1",
            "(.*) - Brave":" $1",
            "(.*) - Noisetorch":" $1",
            "(.*) - Obsidian":" $1"
        }
    },

    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 32,
        "icon-theme": "",
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close"
    },
    
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated":"󰈈",
            "deactivated":"󰈉"
        }
    },

    "tray": {
        "icon-size": 16,
        "spacing": 5
    },

    "clock": {
        "interval": 1,
        "format": "{:%H:%M:%S}  ",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}  "
    },

    "network": {
        "format-wifi": "UP 󰖩",
        "format-ethernet": "UP 󰈀",
        "format-linked": "LINK 󰈀",
        "format-disconnected": "DOWN 󰌙",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}\n{essid} {signalStrength}%",
        "interval": 5
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-muted": "0% 󰝟",
        "format-bluetooth": "{volume}% {icon}",
        "format-bluetooth-muted": "0% 󰝟",
        "format-icons": {
            "headphone": "",
            "hands-free": "󱡏",
            "headset": "󰋎",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["󰕿", "󰖀", "󰕾"]
        }
    },
    "battery": {
        "bat": "BAT0",
        "interval": 60,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% 󰂄",
        "format-plugged": "{capacity}% ",
        "format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
        "tooltip-format": "{timeTo}, {capacity}%"
    },

    "backlight": {
        "device": "amdgpu_bl1",
        "format": "{percent}% {icon}",
        "format-icons": ["󰃞", "󰃟", "󰃠"],
        "tooltip-format": "Brightness: {percent}%"
    },

    "memory": {
        "interval": 5,
        "format": "{}% ",
        "tooltip-format": "RAM: {used:0.1f}G / {total:0.1f}G"
    },

    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}°C ",
        "tooltip": true
    }
}
